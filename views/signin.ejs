<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>sign in Form Validations</title>
    <link rel="stylesheet" href="css/signin.css">
    <link rel="stylesheet" href="css/navsign.css">

<body>
    <section>
        <%- include('./companents/nav.ejs') %>
    </section>
    <section>
        <div class="showcase">
            <div class="video-container">
                <video src="images/signinvid.mp4" autoplay muted loop id="myvideo"
                    style="background-size: cover;"></video>
            </div>
        </div>
        <div class="login-box">
            <h2>Login</h2>
            <form>
                <div class="user-box">
                    <ion-icon name="person-circle-outline"></ion-icon>
                    <input type="email" id="email" name="email" required="">
                    <label>Email</label>
                </div>
                <div class="user-box">
                    <ion-icon name="lock-closed-outline"></ion-icon>
                    <input type="password" id="password" name="password" required="">
                    <label>Password</label>
                </div>
                <div class="register">
                    <p>Don't have an account? <a href="/signup" id="reglink">Register</a></p>
                </div>
                <!-- <div class="forget">
                  <label for=""><input type="checkbox">Remember Me    <a href="#" id="forgetlink">Forgot password</a></label>
               
              </div> -->

            </form>
            <button type="submit" onclick="signin()" id="signin-btn-submit" class="signupbtn">Sign In</button>
        </div>
    </section>
    <script type="module" src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <script src="js/signin.js"></script>

</body>

</html>